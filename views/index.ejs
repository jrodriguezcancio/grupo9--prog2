<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<head>
  <%- include('./partials/head.ejs') %>
</head>
<body>
  <!-- Header -->
  <header class="main-header">
    <%- include('partials/header') %>
   
  </header>
  <!-- /Header -->
  
  <!-- Banner -->
  <div class="banner">
    <img src="/images/products/banner-autos.jpg" alt="Banner de ofertas">
  </div>
  <!-- /Banner -->

  <!-- Novedades -->
  <div class="container products-wrapper">
    <div class="row">
      <div class="col-12">
        <h2 class="products-title">Productos</h2>
      </div>

      <!-- Show all products dynamically -->
      <% for (let i = 0; i < allproducts.length; i++) { 
           let producto = allproducts[i]; %>
        <div class="col-12 col-sm-6 col-lg-3">
          <section class="product-box">
            <a href="/product/<%= producto.id %>">
              <figure class="product-box_image">
                <img src="<%= producto.imagen %>" alt="<%= producto.nombre %>">
              </figure>
              <article class="product-box_data">
                <h2><%= producto.nombre %></h2>
                <p><%= producto.descripcion %></p>
                <p>Comentarios: <%= producto.comentarios.length %></p>
              </article>
            </a>
          </section>
        </div>
      <% } %>

    </div>
  </div>

  <!-- footer -->
	<footer class="main-footer"> 
 <%- include('partials/footer') %>
  </footer>
  <!-- /footer -->
</body>
</html>
